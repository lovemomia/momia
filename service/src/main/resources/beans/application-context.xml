<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="conf" class="cn.momia.common.config.impl.XmlConfiguration" init-method="init">
        <property name="fileName" value="conf/configuration.xml" />
    </bean>

    <bean class="cn.momia.common.web.config.XmlPropertyPlaceholderConfigurer">
        <property name="conf" ref="conf" />
    </bean>

    <bean class="cn.momia.common.web.logger.LoggerConfigurer" init-method="init">
        <property name="conf" ref="conf" />
    </bean>

    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="com.mysql.jdbc.Driver" />
        <property name="jdbcUrl" value="${Database.Tongqu.JdbcUrl}" />
        <property name="user" value="${Database.Tongqu.Username}" />
        <property name="password" value="${Database.Tongqu.Password}" />
        <property name="maxPoolSize" value="30" />
        <property name="maxIdleTime" value="7200" />
        <property name="testConnectionOnCheckin" value="true" />
        <property name="idleConnectionTestPeriod" value="5" />
        <property name="preferredTestQuery" value="SELECT 1" />
        <property name="checkoutTimeout" value="1800000" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean class="cn.momia.common.web.secret.SecretKey" init-method="init">
        <property name="conf" ref="conf" />
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <!-- Service -->
    <bean id="dbAccessService" class="cn.momia.service.base.DbAccessService" abstract="true">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="smsSender" class="cn.momia.service.common.sms.impl.LuosimaoSmsSender" parent="dbAccessService" init-method="init">
        <property name="conf" ref="conf" />
    </bean>
    <bean id="smsVerifier" class="cn.momia.service.common.sms.SmsVerifier" parent="dbAccessService" />
    <bean id="cityService" class="cn.momia.service.common.city.impl.CityServiceImpl" parent="dbAccessService" init-method="init" />
    <bean id="regionService" class="cn.momia.service.common.region.impl.RegionServiceImpl" parent="dbAccessService" init-method="init" />
    <bean id="feedbackService" class="cn.momia.service.common.feedback.impl.FeedbackServiceImpl" parent="dbAccessService" />
    <bean id="commonServiceFacade" class="cn.momia.service.common.impl.CommonServiceFacadeImpl">
        <property name="smsSender" ref="smsSender" />
        <property name="smsVerifier" ref="smsVerifier" />
        <property name="cityService" ref="cityService" />
        <property name="regionService" ref="regionService" />
        <property name="feedbackService" ref="feedbackService" />
    </bean>
    <bean class="cn.momia.service.common.MetaUtil">
        <property name="commonServiceFacade" ref="commonServiceFacade" />
    </bean>

    <bean id="bannerService" class="cn.momia.service.promo.banner.impl.BannerServiceImpl" parent="dbAccessService" />
    <bean id="couponService" class="cn.momia.service.promo.coupon.impl.CouponServiceImpl" parent="dbAccessService" />
    <bean id="promoServiceFacade" class="cn.momia.service.promo.impl.PromoServiceFacadeImpl">
        <property name="bannerService" ref="bannerService" />
        <property name="couponService" ref="couponService" />
    </bean>

    <bean id="baseProductService" class="cn.momia.service.product.base.impl.BaseProductServiceImpl" parent="dbAccessService" init-method="init" />
    <bean id="placeService" class="cn.momia.service.product.place.impl.PlaceServiceImpl" parent="dbAccessService" />
    <bean id="skuService" class="cn.momia.service.product.sku.impl.SkuServiceImpl" parent="dbAccessService" />
    <bean id="favoriteService" class="cn.momia.service.product.favorite.impl.FavoriteServiceImpl" parent="dbAccessService" />
    <bean id="productServiceFacade" class="cn.momia.service.product.impl.ProductServiceFacadeImpl" parent="dbAccessService">
        <property name="baseProductService" ref="baseProductService" />
        <property name="placeService" ref="placeService" />
        <property name="skuService" ref="skuService" />
        <property name="favoriteService" ref="favoriteService" />
    </bean>

    <bean id="userService" class="cn.momia.service.user.base.impl.UserServiceImpl" parent="dbAccessService" />
    <bean id="participantService" class="cn.momia.service.user.participant.impl.ParticipantServiceImpl" parent="dbAccessService" />
    <bean id="userServiceFacade" class="cn.momia.service.user.impl.UserServiceFacadeImpl">
        <property name="userService" ref="userService" />
        <property name="participantService" ref="participantService" />
    </bean>

    <bean id="orderService" class="cn.momia.service.deal.order.impl.OrderServiceImpl" parent="dbAccessService" />
    <bean id="paymentService" class="cn.momia.service.deal.payment.impl.PaymentServiceImpl" parent="dbAccessService" />
    <bean id="dealServiceFacade" class="cn.momia.service.deal.impl.DealServiceFacadeImpl">
        <property name="orderService" ref="orderService" />
        <property name="paymentService" ref="paymentService" />
    </bean>

    <bean id="abstractPaymentGateway" class="cn.momia.service.deal.payment.gateway.AbstractPaymentGateway" abstract="true">
        <property name="conf" ref="conf" />
        <property name="dealServiceFacade" ref="dealServiceFacade" />
        <property name="promoServiceFacade" ref="promoServiceFacade" />
        <property name="productServiceFacade" ref="productServiceFacade" />
    </bean>

    <bean id="alipay" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="cn.momia.service.deal.payment.Payment.Type.ALIPAY" />
    </bean>
    <bean id="alipayGateway" class="cn.momia.service.deal.payment.gateway.alipay.AlipayGateway" parent="abstractPaymentGateway" />

    <bean id="wechatpay" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="cn.momia.service.deal.payment.Payment.Type.WECHATPAY" />
    </bean>
    <bean id="wechatpayGateway" class="cn.momia.service.deal.payment.gateway.wechatpay.WechatpayGateway" parent="abstractPaymentGateway" />

    <bean class="cn.momia.service.deal.payment.gateway.factory.PaymentGatewayFactory">
        <property name="prototypes">
            <map value-type="cn.momia.service.deal.payment.gateway.PaymentGateway">
                <entry key-ref="alipay">
                    <ref bean="alipayGateway" />
                </entry>
                <entry key-ref="wechatpay">
                    <ref bean="wechatpayGateway" />
                </entry>
            </map>
        </property>
    </bean>
</beans>