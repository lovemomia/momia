<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="bannerService" class="cn.momia.service.banner.impl.BannerServiceImpl" parent="dbAccessService" />
    <bean id="baseProductService" class="cn.momia.service.product.base.impl.BaseProductServiceImpl" parent="dbAccessService" init-method="init" />
    <bean id="commentService" class="cn.momia.service.comment.impl.CommentServiceImpl" parent="dbAccessService" />
    <bean id="placeService" class="cn.momia.service.product.place.impl.PlaceServiceImpl" parent="dbAccessService" />
    <bean id="skuService" class="cn.momia.service.product.sku.impl.SkuServiceImpl" parent="dbAccessService" />
    <bean id="topicService" class="cn.momia.service.topic.impl.TopicServiceImpl" parent="dbAccessService" />
    <bean id="favoriteService" class="cn.momia.service.favorite.impl.FavoriteServiceImpl" parent="dbAccessService" />
    <bean id="productServiceFacade" class="cn.momia.service.product.facade.impl.ProductServiceFacadeImpl" parent="dbAccessService">
        <property name="baseProductService" ref="baseProductService" />
        <property name="placeService" ref="placeService" />
        <property name="skuService" ref="skuService" />
    </bean>

    <bean id="couponService" class="cn.momia.service.coupon.impl.CouponServiceImpl" parent="dbAccessService" />
    <bean id="userCouponService" class="cn.momia.service.coupon.impl.UserCouponServiceImpl" parent="dbAccessService" />
    <bean id="promoServiceFacade" class="cn.momia.service.product.facade.impl.PromoServiceFacadeImpl">
        <property name="couponService" ref="couponService" />
        <property name="userCouponService" ref="userCouponService" />
    </bean>

    <bean id="orderService" class="cn.momia.service.order.impl.OrderServiceImpl" parent="dbAccessService" />
</beans>