<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="cn.momia.api.product.ProductServiceApi" init-method="init">
        <property name="service" value="${Service.Product}" />
    </bean>

    <bean class="cn.momia.api.product.DealServiceApi" init-method="init">
        <property name="service" value="${Service.Deal}" />
    </bean>
</beans>