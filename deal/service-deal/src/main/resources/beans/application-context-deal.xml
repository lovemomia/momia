<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="xmlConf" class="org.apache.commons.configuration.XMLConfiguration" init-method="load">
        <property name="fileName" value="conf/configuration.xml" />
    </bean>

    <bean class="cn.momia.common.webapp.config.Configuration">
        <property name="xmlConf" ref="xmlConf" />
    </bean>

    <bean class="cn.momia.common.webapp.config.XmlPropertyPlaceholderConfigurer">
        <property name="xmlConf" ref="xmlConf" />
    </bean>

    <bean class="cn.momia.common.webapp.config.LoggerConfigurer" init-method="init">
        <property name="xmlConf" ref="xmlConf" />
    </bean>

    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="com.mysql.jdbc.Driver" />
        <property name="jdbcUrl" value="${Database.Tongqu.JdbcUrl}" />
        <property name="user" value="${Database.Tongqu.Username}" />
        <property name="password" value="${Database.Tongqu.Password}" />
        <property name="maxPoolSize" value="30" />
        <property name="maxIdleTime" value="7200" />
        <property name="testConnectionOnCheckin" value="true" />
        <property name="idleConnectionTestPeriod" value="5" />
        <property name="preferredTestQuery" value="SELECT 1" />
        <property name="checkoutTimeout" value="1800000" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <!-- Service -->
    <bean id="dbAccessService" class="cn.momia.common.service.DbAccessService" abstract="true">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="couponService" class="cn.momia.service.promo.coupon.impl.CouponServiceImpl" parent="dbAccessService" />
    <bean id="promoServiceFacade" class="cn.momia.service.promo.facade.impl.PromoServiceFacadeImpl">
        <property name="couponService" ref="couponService" />
    </bean>

    <bean id="orderService" class="cn.momia.service.deal.order.impl.OrderServiceImpl" parent="dbAccessService" />
    <bean id="paymentService" class="cn.momia.service.deal.payment.impl.PaymentServiceImpl" parent="dbAccessService" />
    <bean id="dealServiceFacade" class="cn.momia.service.deal.facade.impl.DealServiceFacadeImpl">
        <property name="orderService" ref="orderService" />
        <property name="paymentService" ref="paymentService" />
    </bean>

    <bean id="abstractPaymentGateway" class="cn.momia.service.deal.gateway.AbstractPaymentGateway" abstract="true">
        <property name="dealServiceFacade" ref="dealServiceFacade" />
    </bean>

    <bean id="alipay" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="cn.momia.service.deal.payment.Payment.Type.ALIPAY" />
    </bean>
    <bean id="alipayGateway" class="cn.momia.service.deal.gateway.alipay.AlipayGateway" parent="abstractPaymentGateway" />

    <bean id="wechatpay" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="cn.momia.service.deal.payment.Payment.Type.WECHATPAY" />
    </bean>
    <bean id="wechatpayGateway" class="cn.momia.service.deal.gateway.wechatpay.WechatpayGateway" parent="abstractPaymentGateway" />

    <bean class="cn.momia.service.deal.gateway.factory.PaymentGatewayFactory">
        <property name="prototypes">
            <map value-type="cn.momia.service.deal.gateway.PaymentGateway">
                <entry key-ref="alipay">
                    <ref bean="alipayGateway" />
                </entry>
                <entry key-ref="wechatpay">
                    <ref bean="wechatpayGateway" />
                </entry>
            </map>
        </property>
    </bean>

    <bean class="cn.momia.service.deal.gateway.factory.PrepayParamFactory" />

    <bean class="cn.momia.api.base.BaseServiceApi" init-method="init">
        <property name="service" value="${Service.Common}" />
    </bean>
    <bean class="cn.momia.api.product.ProductServiceApi" init-method="init">
        <property name="service" value="${Service.Product}" />
    </bean>
    <bean class="cn.momia.api.user.UserServiceApi" init-method="init">
        <property name="service" value="${Service.User}" />
    </bean>
</beans>