<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="abstractBaseApi" class="cn.momia.common.core.HttpServiceApi" abstract="true">
        <property name="service" value="${Service.Base}" />
    </bean>

    <bean id="metaServiceApi" class="cn.momia.api.base.MetaServiceApi" parent="abstractBaseApi" />
    <bean class="cn.momia.api.base.FeedbackServiceApi" parent="abstractBaseApi" />
    <bean class="cn.momia.api.base.SmsServiceApi" parent="abstractBaseApi" />

    <bean class="cn.momia.api.base.MetaUtil">
        <property name="metaServiceApi" ref="metaServiceApi" />
    </bean>
</beans>