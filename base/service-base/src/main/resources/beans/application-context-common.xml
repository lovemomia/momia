<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="xmlConf" class="org.apache.commons.configuration.XMLConfiguration" init-method="load">
        <property name="fileName" value="conf/configuration.xml" />
    </bean>

    <bean class="cn.momia.common.webapp.config.Configuration">
        <property name="xmlConf" ref="xmlConf" />
    </bean>

    <bean class="cn.momia.common.webapp.config.XmlPropertyPlaceholderConfigurer">
        <property name="xmlConf" ref="xmlConf" />
    </bean>

    <bean class="cn.momia.common.webapp.config.LoggerConfigurer" init-method="init">
        <property name="xmlConf" ref="xmlConf" />
    </bean>

    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="com.mysql.jdbc.Driver" />
        <property name="jdbcUrl" value="${Database.Tongqu.JdbcUrl}" />
        <property name="user" value="${Database.Tongqu.Username}" />
        <property name="password" value="${Database.Tongqu.Password}" />
        <property name="maxPoolSize" value="30" />
        <property name="maxIdleTime" value="7200" />
        <property name="testConnectionOnCheckin" value="true" />
        <property name="idleConnectionTestPeriod" value="5" />
        <property name="preferredTestQuery" value="SELECT 1" />
        <property name="checkoutTimeout" value="1800000" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <!-- Service -->
    <bean id="dbAccessService" class="cn.momia.common.service.DbAccessService" abstract="true">
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>

    <bean id="smsSender" class="cn.momia.service.base.sms.impl.LuosimaoSmsSender" />
    <bean id="smsService" class="cn.momia.service.base.sms.impl.SmsServiceImpl" parent="dbAccessService">
        <property name="sender" ref="smsSender" />
    </bean>
    <bean id="cityService" class="cn.momia.service.base.city.impl.CityServiceImpl" parent="dbAccessService" init-method="init" />
    <bean id="regionService" class="cn.momia.service.base.region.impl.RegionServiceImpl" parent="dbAccessService" init-method="init" />
    <bean id="feedbackService" class="cn.momia.service.base.feedback.impl.FeedbackServiceImpl" parent="dbAccessService" />
    <bean id="recommendService" class="cn.momia.service.base.recommend.impl.RecommendServiceImpl" parent="dbAccessService" />
    <bean id="commonServiceFacade" class="cn.momia.service.base.facade.impl.CommonServiceFacadeImpl">
        <property name="smsService" ref="smsService" />
        <property name="cityService" ref="cityService" />
        <property name="regionService" ref="regionService" />
        <property name="feedbackService" ref="feedbackService" />
        <property name="recommendService" ref="recommendService" />
    </bean>
</beans>